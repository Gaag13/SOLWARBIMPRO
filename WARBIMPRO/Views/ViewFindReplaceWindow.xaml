<Window x:Class="WARBIMPRO.Views.ViewFindReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:converters="clr-namespace:WARBIMPRO.Views.Converters"
        Title="Replace" Foreground="Aqua"
        Width="500" 
        Height="700"
        Background="#4444"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <!-- Resources -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="#4B4B7A" BorderThickness="1" Margin="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>               
                <RowDefinition Height="Auto"/>
                <!-- Título -->
                <RowDefinition Height="Auto"/>
                <!-- Búsqueda -->
                <RowDefinition Height="*"/>
                <!-- Lista de vistas -->
                <RowDefinition Height="Auto"/>
                <!-- Operaciones Find/Replace -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
          
            </Grid.RowDefinitions>
           
            <!-- ==================== TÍTULO ==================== -->
            <TextBlock Grid.Row="0" 
                       Text="Find and Replace in Views"
                       Style="{StaticResource TextBlockStyle}"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- ==================== BÚSQUEDA ==================== -->
            <GroupBox Grid.Row="1" 
                      Header="Find" 
                      Margin="0,0,0,15"
                      Foreground="White"
                      BorderBrush="Orange"
                      BorderThickness="1">
                <Grid Margin="10,10,10,5">
                    <TextBox x:Name="SearchTextBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchBoxStyle}"
                             Height="35"
                             VerticalContentAlignment="Center"
                             Padding="10,0"/>

                </Grid>
            </GroupBox>

            <!-- ==================== LISTA DE VISTAS ==================== -->
            <GroupBox Grid.Row="2" 
                      Header="Found Views" 
                      Margin="0,0,0,15"
                      Foreground="White"
                      BorderBrush="Orange"
                      BorderThickness="1">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Contador de vistas -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="5,5,5,10">
                        <TextBlock Text="Total: " 
                                   Style="{StaticResource TextBlockStyle}"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Views.Count}" 
                                   Style="{StaticResource TextBlockStyle}"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="Orange"/>
                        <TextBlock Text=" views" 
                                   Style="{StaticResource TextBlockStyle}"
                                   FontSize="12"
                                   Margin="2,0,0,0"/>
                    </StackPanel>

                    <!-- Lista con ScrollBar personalizada -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Views}"
                             Style="{StaticResource ListBoxStyle}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="#4444">
                        <ListBox.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarStyle}"/>
                        </ListBox.Resources>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                        Padding="5"
                                        Margin="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource CheckBoxStyle}"
                                                  VerticalAlignment="Center"
                                                  Margin="5,0,10,0"/>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}" 
                                                   Style="{StaticResource TextBlockStyle}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <!-- ==================== OPERACIONES ==================== -->
            <GroupBox Grid.Row="3" 
                      Header="Operations renamed" 
                      Margin="0,0,0,15"
                      Foreground="White"
                      BorderBrush="Orange"
                      BorderThickness="1">
                <StackPanel Margin="10">

                    <!-- REPLACE -->
                    <TextBlock Text="Replace:" 
                               Style="{StaticResource TextBlockStyle}"
                               FontSize="12"
                               Margin="0,5,0,3"/>
                    <Grid Margin="0,0,0,10">
                        <TextBox x:Name="ReplaceTextBox"
                                 Text="{Binding Replace}"
                                 Style="{StaticResource SearchBoxStyle}"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 Padding="8,0"/>

                    </Grid>

                    <!-- PREFIX -->
                    <TextBlock Text="Prefix:" 
                               Style="{StaticResource TextBlockStyle}"
                               FontSize="12"
                               Margin="0,5,0,3"/>
                    <Grid Margin="0,0,0,10">
                        <TextBox x:Name="PrefixTextBox"
                                 Text="{Binding Prefix}"
                                 Style="{StaticResource SearchBoxStyle}"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 Padding="8,0"/>

                    </Grid>

                    <!-- SUFFIX -->
                    <TextBlock Text="Suffix:" 
                               Style="{StaticResource TextBlockStyle}"
                               FontSize="12"
                               Margin="0,5,0,3"/>
                    <Grid Margin="0,0,0,5">
                        <TextBox x:Name="SuffixTextBox"
                                 Text="{Binding Suffix}"
                                 Style="{StaticResource SearchBoxStyle}"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 Padding="8,0"/>

                    </Grid>

                </StackPanel>
            </GroupBox>

            <!-- ==================== BOTONES ==================== -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,10,0,0">

                <Button Content="Select All" 
                        Command="{Binding SelectAllCommand}" 
                        Style="{StaticResource ButtonStyle}"
                        Width="130"
                        Height="35"
                        Margin="5"
                        FontSize="13"/>

                <Button Content="Selecte None" 
                        Command="{Binding SelectNoneCommand}" 
                        Style="{StaticResource ButtonStyle}"
                        Width="130"
                        Height="35"
                        Margin="5"
                        FontSize="13"/>

                <Button Content="✓ Rename" 
                        Command="{Binding RenameCommand}" 
                        Style="{StaticResource ButtonStyle}"
                        Width="130"
                        Height="35"
                        Margin="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#2ecc71">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>

        </Grid>
    </Border>
</Window>