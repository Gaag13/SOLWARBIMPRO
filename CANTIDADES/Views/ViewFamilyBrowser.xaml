<UserControl x:Class="WARBIMPRO.Views.ViewFamilyBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:WARBIMPRO.Views.Converters"
             mc:Ignorable="d"       
             d:DesignHeight="500" d:DesignWidth="350"
             Background="#F5F5F5">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con botón Settings -->
        <Border Grid.Row="0" 
                Background="#444" 
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Family Browser" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
            </Grid>
        </Border>

        <!-- Buscador -->
        <Border Grid.Row="1" 
                Background="White"
                Padding="10"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TextBox de búsqueda con placeholder -->
                <Border Grid.Column="0"
                        Background="#F8F9FA"
                        BorderBrush="#CFD8DC"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10,8">
                    <Grid>
                        <!-- Placeholder -->
                        <TextBlock Text="🔍 Search families or types..."
                                   FontSize="13"
                                   Foreground="#90A4AE"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TextoBusqueda}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TextoBusqueda}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- TextBox real -->
                        <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 Padding="0"/>
                    </Grid>
                </Border>

                <!-- Botón limpiar -->
                <Button Grid.Column="1"
                        Content="✕"
                        Command="{Binding LimpiarBusquedaCommand}"
                        Width="36"
                        Height="36"
                        Margin="8,0,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        ToolTip="Clear search">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E74C3C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#A93226"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- TreeView -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="5">
            <TreeView Background="Transparent" 
                      BorderThickness="0"
                      ItemsSource="{Binding CategoriaFamiliasFiltradas}">
                <TreeView.ItemTemplate>
                    <!-- NIVEL 1: CATEGORÍA -->
                    <HierarchicalDataTemplate ItemsSource="{Binding Familias}">
                        <Border Background="White" 
                                Padding="10,8" 
                                Margin="0,2"
                                CornerRadius="4"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Width="28" Height="28"
                                        Background="#444"
                                        CornerRadius="4"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="📁" 
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding NombreCategoria}" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Foreground="#444"/>

                                <Border Grid.Column="2"
                                        Background="#444"
                                        CornerRadius="12"
                                        Padding="8,3">
                                    <TextBlock Text="{Binding Familias.Count}" 
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- NIVEL 2: FAMILIA -->
                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Tipos}">
                                <Border Background="#F8F9FA"
                                        Padding="8,6"
                                        Margin="20,2,0,2"
                                        CornerRadius="4"
                                        BorderThickness="1"
                                        BorderBrush="#D0D0D0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" 
                                                Width="24" Height="24"
                                                Background="#666"
                                                CornerRadius="3"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="📋" 
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding NombreFamilia}" 
                                                   FontWeight="Medium"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Foreground="#333"/>

                                        <Border Grid.Column="2"
                                                Background="#666"
                                                CornerRadius="10"
                                                Padding="6,2">
                                            <TextBlock Text="{Binding Tipos.Count}" 
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- NIVEL 3: TIPOS -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                Padding="10"
                                                Margin="40,2,0,2"
                                                CornerRadius="4"
                                                BorderThickness="1"
                                                BorderBrush="#E0E0E0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="4" 
                                                                              ShadowDepth="1" 
                                                                              Opacity="0.1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F8F9FA"/>
                                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="70" Height="70"
                                                        Background="#ECEFF1"
                                                        BorderBrush="#CFD8DC"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Margin="0,0,12,0">
                                                    <Grid>
                                                        <Image Source="{Binding Preview}" 
                                                               Stretch="Uniform"
                                                               Margin="2">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Source" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>

                                                        <TextBlock Text="📦" 
                                                                   FontSize="32"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Opacity="0.4">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Preview}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding NombreTipo}" 
                                                           FontSize="13"
                                                           FontWeight="Medium"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           Foreground="#2C3E50"
                                                           Margin="0,0,10,0"/>

                                                <Button Grid.Column="2"
                                                        Content="+"
                                                        ToolTip="Place Family"
                                                        Command="{Binding DataContext.ColocarFamiliaCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="40" Height="40"
                                                        FontSize="20"
                                                        FontWeight="Bold"
                                                        Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="#3498DB"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="20"
                                                                                BorderThickness="0">
                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#2980B9"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background" Value="#21618C"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>
    </Grid>
</UserControl>