<Window x:Class="WARBIMPRO.Views.Logeo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Login" Height="300" Width="400"
      ResizeMode="NoResize"
      Background="Transparent" Loaded="Logeo_OnLoaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlobalStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Border Background="#2A2A45" CornerRadius="10" 
          BorderThickness="1" BorderBrush="#3498db">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <!-- Título -->
                <TextBlock Text="Login" 
                         FontSize="20" 
                         Style="{StaticResource TextBlockStyle}"
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,20" />

                <!-- Nombre de Usuario -->
                <TextBlock Text="Correo electronico:" 
                         Style="{StaticResource TextBlockStyle}"
                         VerticalAlignment="Top" />
                <TextBox x:Name="txtLoginUsername" 
                       VerticalAlignment="Top" 
                       Style="{StaticResource SearchBoxStyle}"
                       Margin="0,10,0,0" 
                       Height="30" />

                <!-- Contraseña -->
                <TextBlock Text="Contraseña:" 
                         Style="{StaticResource TextBlockStyle}"
                         VerticalAlignment="Top" 
                         Margin="0,10,5,20"/>

                <PasswordBox x:Name="txtLoginPassword" 
                           VerticalAlignment="Top" 
                           Margin="0,0,0,50" 
                           Height="30" 
                           Style="{StaticResource PasswordBoxStyle}"/>




            </StackPanel>
            <!-- Botón de Login -->
            <Button Content="Login" 
                  VerticalAlignment="Bottom" 
                  HorizontalAlignment="Left" 
                  Width="80" 
                  Height="40" 
                  Margin="50,0,0,0"
                  Style="{StaticResource ButtonStyle}"
                    Click="ButtonBase_OnClick" />

            <!-- Botón de registro -->
            <Button Content="Registro" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" 
                    Width="80" 
                    Height="40" 
                    Margin="0,0,50,0"
                    Style="{StaticResource ButtonStyle}"
                    Click="ButtonBaseR_OnClick" />

        </Grid>
    </Border>


</Window>
